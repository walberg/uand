<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.luminoussquares.myappportfolio.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Nanodegree Apps!"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/abc_text_size_title_material"
        android:textAlignment="center"
        android:id="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Popular Movies"
        android:id="@+id/buttonPopularMovies"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:onClick="sendMessagePopularMovies" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stock Hawk"
        android:id="@+id/buttonStockHawk"
        android:layout_below="@+id/buttonPopularMovies"
        android:layout_centerHorizontal="true"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:onClick="sendMessageStockHawk" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Build It Bigger"
        android:id="@+id/buttonBuildItBigger"
        android:layout_below="@+id/buttonStockHawk"
        android:layout_centerHorizontal="true"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:onClick="sendMessageBuildItBigger" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make Your App Material"
        android:id="@+id/buttonMakeYourAppMaterial"
        android:layout_below="@+id/buttonBuildItBigger"
        android:layout_centerHorizontal="true"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:onClick="sendMessageMakeYourAppMaterial" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go Ubiquitous"
        android:id="@+id/buttonGoUbiquitous"
        android:layout_below="@+id/buttonMakeYourAppMaterial"
        android:layout_centerHorizontal="true"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:onClick="sendMessageGoUbiquitous" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Capstone"
        android:id="@+id/buttonCapstone"
        android:layout_below="@+id/buttonGoUbiquitous"
        android:layout_centerHorizontal="true"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:onClick="sendMessageCapstone" />
</RelativeLayout>
